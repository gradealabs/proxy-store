{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "lib",
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/_fixtures"
  ]
}
